
".container": {
	navBarHidden: true,
	fullscreen: true,
	height: '100%'
}

"#scroller": {
	height: '100%',
	contentHeight: 'auto',
	bottom: '48dip'
}

"#tableView":{
	top: "0",
	height: Ti.UI.AUTO,
	selectionStyle: Titanium.UI.iPhone.TableViewCellSelectionStyle.NONE,
	separatorColor: "transparent"
}

"#addNewCommentContainer":{
	backgroundColor: 'black',
	opacity: '0.75',
	height: '100%',
	width: '100%',
	top: 0,
	left: 0,
	visible: false,
	// zOrder: 1
}

"#whiteCommentBox":{
	backgroundColor: 'white',
	height:'90%',
	width:'90%',
	opacity: '1.0',
	visible: false,
	backgroundGradient: {
        type: 'linear',
        startPoint: { x: '50%', y: '0%' },
        endPoint: { x: '50%', y: '100%' },
        colors: [ 	{ color: '#EEEEEE', offset: 0.0}, 
        			{ color: '#FFFFFF', offset: 1.0 }],
    }
}

"#submitYourCommentLabel":{
	opacity: '1.0',
	color: 'black',
	font: {
		fontFamily: 'Helvetica Neue',
		fontSize: '21dp',
		fontWeight: 'bold'
	},
	top: '4%',
	textAlign: 'center',
}

"#insertName":{
	hintText: 'Name',
	keyboardType: Titanium.UI.KEYBOARD_DEFAULT,
	opacity: '1.0',
	font: {
		fontFamily: 'Helvetica Neue',


".container": {
	navBarHidden: true,
	fullscreen: true,
	height: '100%'
}

"#scroller": {
	height: '100%',
	contentHeight: 'auto',
	bottom: '48dip'
}

"#tableView":{
	top: "0",
	height: Ti.UI.AUTO,
	selectionStyle: Titanium.UI.iPhone.TableViewCellSelectionStyle.NONE,
	separatorColor: "transparent"
}

"#addNewCommentContainer":{
	backgroundColor: 'black',
	opacity: '0.75',
	height: '100%',
	width: '100%',
	top: 0,
	left: 0,
	visible: false
}

"#whiteCommentBox":{
	backgroundColor: 'white',
	height:'430dip',
	width:'260dip',
	top: '0%',
	opacity: '1.0',
	visible: false,
	backgroundColor: '#FFFFFF',
}

"#submitYourCommentLabel":{
	opacity: '1.0',
	color: 'black',
	font: {
		
		fontSize: '21dp',
		fontWeight: 'bold'
	},
	top: '4%',
	textAlign: 'center',
}

"#insertName":{
	hintText: 'Name',
	keyboardType: Titanium.UI.KEYBOARD_DEFAULT,
	returnKeyType:Titanium.UI.RETURNKEY_NEXT,
	opacity: '1.0',
	font: {
		
		fontSize: '18dp',
		fontWeight: 'normal'
	},
	color: 'black',
	top: '15%',
	left: '7%',
	width: '85%',
	height: '10%',
	backgroundColor: '#f2f2f2',
	borderWidth: '1',
	borderColor: 'black',
	clearOnEdit: false,
	paddingLeft: "5dip",
	tintColor: "black"
}

"#insertNameDisclaimer":{
	font: {
		
		fontSize: '12dip',
		fontWeight: 'normal'
	},
	color: 'black',
	left: '7%',
}

"#insertEmail":{
	hintText: 'Email',
	keyboardType: Titanium.UI.KEYBOARD_EMAIL,
	returnKeyType:Titanium.UI.RETURNKEY_NEXT,
	opacity: '1.0',
	font: {
		
		fontSize: '18dp',
		fontWeight: 'normal'
	},
	color: 'black',
	left: '7%',
	width: '85%',
	height: '10%',
	backgroundColor: '#f2f2f2',
	borderWidth: '1',
	borderColor: 'black',
	clearOnEdit: false,
	paddingLeft: "5dip",
	top: '3%',
	tintColor: "black"
}

"#insertEmailDisclaimer":{
	font: {
		
		fontSize: '12dip',
		fontWeight: 'normal'
	},
	color: 'black',
	left: '7%',
}

"#submitCommentFormView":{
	layout: "vertical"
}

"#insertComment":{
	hintText: 'Comment',
	keyboardType: Titanium.UI.KEYBOARD_DEFAULT,
	returnKeyType:Titanium.UI.RETURNKEY_DONE,
	opacity: '1.0',
	font: {
		
		fontSize: '18dp',
		fontWeight: 'normal'
	},
	color: 'black',
	backgroundColor: '#f2f2f2',
	left: '7%',
	width: '85%',
	height: '35%',
	borderWidth: '1',
	borderColor: 'black',
	clearOnEdit: false,
	paddingLeft: "5dip",
	top: '3%',
	tintColor: "black"
}

"#submitButton":{
	title: 'Submit',
	opacity: '1.0',
	font: {
		
		fontSize: '18dp',
		fontWeight: 'bold'
	},
	left: '0',
	width: '49%',
	height: '100%',
	color: '#FFFFFF',
	backgroundColor: '#2ECC71'
}

"#cancelCommentButton":{
	title: 'Cancel',
	opacity: '1.0',
	font: {
		
		fontSize: '16dp',
		fontWeight: 'bold'
	},
	left: "2%",
	width: '49%',
	height: '100%',
	color: '#FFFFFF',
	backgroundColor: '#E74C3C'
}

"#buttonView":{
	layout: "horizontal",
	top: "3%",
	height: "10%",
	width: "85%"
}

".thankYouMessageComment":{
	opacity: '1.0',
	font: {
		
		fontSize: '16dp',
		fontWeight: 'normal'
	},
	textAlign: 'center',
	color: 'black',
	top: '35%',
	left: '7%',
	width: '85%',
	height: 'auto',
}


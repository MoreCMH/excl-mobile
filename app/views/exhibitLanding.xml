<Alloy>
	<Window class="container">
		<View id="mainView">
			<Widget id="navBar" src="navigationBar"/>
			<ScrollableView id="exhibitsCarousel">
				<View id="placeholder"/>
			</ScrollableView>
			<View id="infoView">
				<View id="bottomView">
					<View id="componentScrollViewHeading" class="headingRow">
						<Label id="componentScrollViewLabel"/>
					</View>
					<ScrollView id="componentScrollView"/>
				</View>
				<View id="topView">
					<View id="headingLabelView" class="headingRow">
						<Label id="headingLabel"/>
						<ImageView id="arrowIcon"/>
					</View>
					<ScrollView id="exhibitInfoScrollView">
						<Label id="exhibitInfoLabel"/>
					</ScrollView>
				</View>
			</View>
		</View>
	</Window>
</Alloy>